<!--pages/ai_analysis_res/index.wxml-->

<!--pages/demo/index.wxml-->
<navigation-bar title="识别结果" back="{{true}}" color="black" background="#FFF"></navigation-bar>

<t-notice-bar visible="{{visible}}" marquee="{{marquee2}}" content="请勿上传违规内容"></t-notice-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="banner">
      <image class="banner-image" src="{{bannerImage}}" mode="aspectFit"></image>
      <text class="ad-text">模型: {{adText}}</text>
    </view>

    <view class="results-container">
      <view class="title">分析结果</view>
      <view class="analyse-results-container" wx:if="{{possibleResults.length > 0}}">
        <view class="analyse-result-item" wx:for="{{possibleResults}}" wx:key="index">
          <view class="result-color" style="background-color: {{item.rgb}};"></view>
          <view class="result-label">{{item.label}}</view>
          <view class="result-details">
            <view class="result-confidence">置信度: {{item.confidence}}</view>
          </view>
        </view>
      </view>
    </view>

    <view class="status-container">
      <text class="status-text">处理状态: {{queryAnalyseJobResp.analyseJobVo.process}}</text>
      <text class="status-text">结果: {{queryAnalyseJobResp.analyseJobVo.status}}</text>
    </view>

    <view class="file-info">
      <text class="file-info-text">源文件: {{queryAnalyseJobResp.analyseJobVo.sourceObjectId}}</text>
      <text class="file-info-text">目标文件: {{queryAnalyseJobResp.analyseJobVo.targetObjectId}}</text>
    </view>
  </view>
</scroll-view>

<!--pages/ai_analysis_res/index.wxml-->
<view class="container">
  <view class="banner">
    <image src="{{bannerImage}}" mode="aspectFill" class="banner-image"/>
    <view class="ad-text">{{adText}}</view>
  </view>
  
  <view class="results-container">
    <view class="title">可能结果</view>
    <view class="results-list">
      <view class="result-item" wx:for="{{possibleResults}}" wx:key="index" bindtap="onTapResult" data-index="{{index}}">
        <image src="{{item.image}}" mode="aspectFit" class="result-image"/>
        <view class="result-info">
          <text class="result-name">{{item.name}}</text>
          <text class="result-probability">{{item.probability}}%</text>
        </view>
      </view>
    </view>
  </view>
</view>

.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
}

.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.food-image {
  width: 80px;
  height: 80px;
  object-fit: cover;
}

.food-info {
  padding: 10rpx;
  flex: 1;
}

.food-name {
  font-size: 28rpx;
  font-weight: bold;
}

.food-description {
  font-size: 24rpx;
  color: #888;
  margin-top: 5rpx;
}

.price-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.price {
  font-size: 28rpx;
  color: #e74c3c;
}

.status {
  font-size: 24rpx;
  color: #888;
}

.scrollarea {
  height: 100vh;
}
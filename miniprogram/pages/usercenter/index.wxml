<!--pages/demo/index.wxml-->
<navigation-bar title="模型选择" back="{{false}}" color="black" background="#FFF"></navigation-bar>

<scroll-view class="scrollarea" scroll-y type="list" style="display: flex; flex-direction: column;">
  
    <view class="user-center">
      <view class="user-info">
        <t-avatar class="avatar" image="{{avatarUrl}}" size="large" />
        <view class="info">
          <text class="username">{{username}}</text>
          <text class="status">{{status}}</text>
        </view>
      </view>

      <view class="function-groups">
        <t-cell-group title="我的服务">
          <t-cell title="我的收藏" leftIcon="heart" hover arrow />
          <t-cell title="优惠券" leftIcon="coupon" hover arrow />
          <t-cell title="收货地址" leftIcon="location" hover arrow />
          <t-cell title="客户服务" leftIcon="service" hover arrow />
        </t-cell-group>

        <t-cell-group>
          <t-cell title="设置" leftIcon="setting" hover arrow />
        </t-cell-group>
      </view>
    </view>
  
</scroll-view>
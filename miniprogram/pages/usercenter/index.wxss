.user-center {
  padding: 30rpx;
  background-color: #f8f8f8;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.nickname-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.nickname-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.nickname-input {
  width: 80%;
  height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  border-bottom: 2rpx solid #f0f0f0;
}

.info {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.status {
  font-size: 26rpx;
  color: #666666;
}

.function-groups {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-types {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-type {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-type text {
  font-size: 26rpx;
  color: #333333;
  margin-top: 12rpx;
}

t-cell-group {
  margin-bottom: 30rpx;
}

t-cell {
  padding: 30rpx 40rpx;
}

t-cell::after {
  left: 40rpx;
  right: 40rpx;
  height: 2rpx;
  background-color: #f0f0f0;
}

t-cell:last-child::after {
  display: none;
}

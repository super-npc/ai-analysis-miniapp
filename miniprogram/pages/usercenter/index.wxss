.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}
.profile {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.info {
  flex: 1;
}
.username {
  font-size: 28rpx;
  font-weight: bold;
}
.status {
  font-size: 24rpx;
  color: #888888;
}

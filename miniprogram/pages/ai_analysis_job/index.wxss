.product-container {
  padding: 10px;
  background-color: #f0f0f0;
}

.product-item {
  background-color: #ffffff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.username {
  font-size: 16px;
  font-weight: bold;
}

.user-tag {
  font-size: 12px;
  color: #ff6b00;
  background-color: #fff2e8;
  padding: 2px 5px;
  border-radius: 10px;
  margin-left: 10px;
}

.product-info {
  margin-bottom: 10px;
}

.product-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.product-price {
  font-size: 20px;
  color: #ff6b00;
  font-weight: bold;
}

.product-images {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.product-image {
  width: 32%;
  height: 100px;
  border-radius: 4px;
}

.product-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.group-buy {
  font-size: 12px;
  color: #666;
}

.share-button {
  background-color: #07c160;
  color: white;
  padding: 5px 15px;
  border-radius: 15px;
  font-size: 14px;
}


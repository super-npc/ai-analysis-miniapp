/* 整体容器样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 相机预览容器样式 */
.camera-preview-container {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 相机和预览图片样式 */
.camera, .preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 分析结果容器样式 */
.analyse-results-container {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

/* 分析结果项样式 */
.analyse-result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.analyse-result-item:last-child {
  border-bottom: none;
}

/* 结果标签样式 */
.result-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 结果详情样式 */
.result-details {
  display: flex;
  align-items: center;
}

/* 结果颜色样式 */
.result-color {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

/* 结果置信度样式 */
.result-confidence {
  font-size: 24rpx;
  color: #666;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

/* 按钮样式 */
button {
  width: 45%;
  font-size: 28rpx;
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 12rpx 24rpx;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  transition-duration: 0.4s;
  cursor: pointer;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

button:hover {
  background-color: #45a049;
}

/* 模型文本容器样式 */
.model-text-container {
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

/* 模型文本样式 */
.model-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

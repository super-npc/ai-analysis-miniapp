/* pages/demo/index.wxss */
page {
  background-color: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 0 40rpx 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

.camera-preview-container,
.camera-container {
  width: 100%;
  height: 700rpx;
  margin: 30rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
}

.camera,
.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.preview-image {
  max-width: 100%;
  border-radius: 20rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 30rpx 0;
}

button,
.button {
  flex: 1;
  padding: 25rpx 0;
  margin: 0 10rpx;
  background-color: #007AFF;
  color: #ffffff;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 10rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

button:first-child,
.button:first-child {
  margin-left: 0;
}

button:last-child,
.button:last-child {
  margin-right: 0;
}

button:active,
.button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 5rpx rgba(0, 122, 255, 0.2);
}

.preview-title {
  font-size: 34rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  color: #333333;
  text-align: center;
}

/* 移除navigation-bar和scroll-view之间的空白 */
navigation-bar {
  display: block;
  margin-bottom: 0;
}

.scrollarea {
  margin-top: 0;
}

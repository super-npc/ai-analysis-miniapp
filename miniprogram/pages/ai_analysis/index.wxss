/* pages/demo/index.wxss */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 0 40rpx 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.model-text-container {
  width: 100%;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.model-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.camera-preview-container,
.camera-container {
  width: 100%;
  height: 700rpx;
  margin: 30rpx 0;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
}

.camera,
.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.preview-image {
  max-width: 100%;
  border-radius: 20rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 30rpx 0;
}

button,
.button {
  flex: 1;
  padding: 25rpx 0;
  margin: 0 10rpx;
  background-color: #007AFF;
  color: #ffffff;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 10rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

button:first-child,
.button:first-child {
  margin-left: 0;
}

button:last-child,
.button:last-child {
  margin-right: 0;
}

button:active,
.button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 5rpx rgba(0, 122, 255, 0.2);
}

.preview-title {
  font-size: 34rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  color: #333333;
  text-align: center;
}

/* 移除navigation-bar和scroll-view之间的空白 */
navigation-bar {
  display: block;
  margin-bottom: 0;
}

.scrollarea {
  margin-top: 0;
}

/* 新增样式 */
.navigation-bar {
  background-color: #007AFF;
  color: #ffffff;
}

.camera-preview-container {
  position: relative;
}

.camera-preview-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0));
  pointer-events: none;
}

.button-group button {
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.preview-title::after {
  content: '';
  display: block;
  width: 60rpx;
  height: 4rpx;
  background-color: #007AFF;
  margin: 10rpx auto 0;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.container{
  animation: fadeIn 0.5s ease-out;
}

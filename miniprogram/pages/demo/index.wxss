/* pages/demo/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.camera-container {
  width: 100%;
  height: 600rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.camera {
  width: 100%;
  height: 100%;
}

.button-group {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 20rpx;
}

.button {
  padding: 20rpx 40rpx;
  background-color: #007AFF;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 122, 255, 0.2);
  transition: all 0.3s ease;
}

.button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 4rpx rgba(0, 122, 255, 0.2);
}

.preview-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333333;
}

.preview-image {
  width: 100%;
  max-width: 600rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

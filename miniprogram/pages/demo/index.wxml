<!--pages/demo/index.wxml-->
<view class="container">
  <!-- camera.wxml -->
  <camera wx:if="{{showCamera}}" device-position="back" flash="off" binderror="error" style="width: 100%; height: 300px;"></camera>
  <button type="primary" bindtap="toggleCamera">{{showCamera ? '关闭摄像头' : '打开摄像头'}}</button>
  <button wx:if="{{showCamera}}" type="primary" bindtap="takePhoto">拍照</button>
  <view>预览</view>
  <image wx:if="{{src}}" mode="widthFix" src="{{src}}"></image>
</view>